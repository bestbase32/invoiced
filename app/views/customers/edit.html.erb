<div class="container">
  <h1>Edit Customer <%= @customer.customer_name %></h1>
  <%= form_for @customer do |f| %>
  <p>
    Address: <%= f.text_field :customer_address %>
  </p>
  <p>
    Telephone: <%= f.text_field :phone_no %>
  </p>
  <p>
    E-mail: <%= f.text_field :email %>
  </p>
  <%= f.submit "Save", class: "btn btn-default" %>
  <%= link_to 'Back', :action => nil %>
  <% end %>
</div>

