<div class="container">
  <h1>Customer</h1>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Customer Name</th>
        <th>Address</th>
        <th>Phone No</th>
        <th>E-mail</th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.customer_name %></td>
        <td><%= customer.customer_address %></td>
        <td><%= customer.phone_no %></td>
        <td><%= customer.email %></td>
        <td>
          <%= link_to 'Show', customer_path(customer.id), class: "btn btn-info" %>
          <%= link_to 'Edit', edit_customer_path(customer.id), class: "btn btn-default" %>
          <%= link_to "Destroy",customer, class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New customer', new_customer_path, class: "btn btn-primary", "data-no-turbolink" => true %>
</div>
