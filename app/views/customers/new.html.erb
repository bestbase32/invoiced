<div class="container">
  <h2>New Customer</h2>
  
  <%= form_for @customer, class: "form-horizontal" do |f| %>
  <div class="form-group">
    <%= f.label :Name,class: "col-sm-10 control-label"%>
      <div class="col-md-6">
        <%= f.text_field :customer_name, class: "form-control", placeholder: "customer_name" %>
      </div>
  </div>
  <div class="form-group">
    <%= f.label :Address,class: "col-sm-10 control-label"%>
      <div class="col-md-6">
        <%= f.text_area :customer_address, class: "form-control", placeholder: "customer_address" %>
      </div>
  </div>
  <div class="form-group">
    <%= f.label :Telephone,class: "col-sm-10 control-label"%>
      <div class="col-md-6">
        <%= f.text_field :phone_no, class: "form-control", placeholder: "phone_no" %>
      </div>
  </div>
  <div class="form-group">
      <%= f.label :Email,class: "col-sm-10 control-label"%>
      <div class="col-md-6">
        <%= f.text_field :email, class: "form-control", placeholder: "email" %>
      </div>
  </div>
    <%= f.submit "Save", class: "btn btn-default" %>
  <%= link_to 'Back', :action => nil %>
  <% end %>
</div>


