

<div class="container">
  <h2>Log in</h2>
    <div class="row">
    <div class="span4 offset4 well">
      <legend>Please Sign In</legend>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <form method="POST" action="" accept-charset="UTF-8">
      <%= f.email_field :email, autofocus: true, class: "span4", name: "username", placeholder: "Username" %>
       <%= f.password_field :password, autocomplete: "off", class: "span4", name: "password", placeholder: "Password" %>
       <% if devise_mapping.rememberable? -%>
            <label class="checkbox">
             <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
            </label>
             <% end -%>
     <!--  <button type="submit" name="submit" class="btn btn-info btn-block">Sign in</button> -->
      <%= f.submit "Log in", class: "btn btn-info btn-block"%>
      </form>    
    </div>
    <% end %>
</div>
</div>
<%= render "users/shared/links" %>
  